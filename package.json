{
  "name": "horarios-de-aula",
  "version": "1.0.0",
  "description": "Sistema de gestão de horários para a Escola do Chavito",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:watch": "nodemon --exec ts-node src/main.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["escola", "horarios", "gestao", "typescript"],
  "author": "Professor Girafales",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/sqlite3": "^3.1.11",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "mysql2": "^3.15.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7"
  }
}